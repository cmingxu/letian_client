<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/baoshi_new" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:scrollbars="vertical"
	android:background="@drawable/bg">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">



		<EditText android:layout_width="fill_parent" android:hint="维修项目"
			android:layout_height="wrap_content" android:id="@+id/weixiuxiangmu"></EditText>

		<EditText android:layout_width="fill_parent" android:lines="5"
			android:id="@+id/weixiuneirong" android:hint="维修内容"
			android:layout_height="wrap_content"></EditText>

		<EditText android:layout_width="fill_parent" android:lines="5"
			android:id="@+id/weixiushuoming" android:hint="维修说明"
			android:layout_height="wrap_content"></EditText>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="horizontal"
			android:gravity="center_vertical|center_horizontal">
			<Button android:layout_width="wrap_content"
				android:layout_height="fill_parent" android:id="@+id/take_pic_button"
				android:text="拍照">
			</Button>

			<ImageView android:src="@drawable/icon" android:id="@+id/pic"
				android:layout_height="fill_parent" android:layout_width="wrap_content"></ImageView>
		</LinearLayout>




		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<Button android:layout_width="fill_parent" android:id="@+id/save_button"
				android:layout_height="wrap_content" android:text="保存"></Button>
			<Button android:layout_width="fill_parent" android:id="@+id/return_button"
				android:layout_height="wrap_content" android:text="返回"></Button>
		</LinearLayout>
	</LinearLayout>
</ScrollView>  