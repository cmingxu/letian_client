<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/baoshi_new" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:scrollbars="vertical"
	android:background="@drawable/bg">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">

		<EditText android:layout_width="fill_parent"
			android:editable="false" android:layout_height="wrap_content"
			android:id="@+id/show_choose_unit_ed"></EditText>



		<EditText android:layout_width="fill_parent"
			android:editable="false" android:layout_height="wrap_content"
			android:id="@+id/show_tel_et"></EditText>

		<EditText android:layout_width="fill_parent"
			android:editable="false" android:layout_height="wrap_content"
			android:id="@+id/show_person_et"></EditText>



		<EditText android:layout_width="fill_parent" android:lines="5"
			android:editable="false" android:id="@+id/show_desc_et"
			android:layout_height="wrap_content"></EditText>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:gravity="center_vertical|center_horizontal">
			<ListView xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/show_weixiujilu_list" android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
			</ListView>
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="horizontal"
			android:gravity="center_vertical|center_horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/delete_weixiudan_button"
				android:layout_height="wrap_content" android:text="删除此维修单"></Button>

			<Button android:layout_width="wrap_content" android:id="@+id/save_weixiudan_button"
				android:layout_height="wrap_content" android:text="保存至服务器"
				android:enabled="false"></Button>

		</LinearLayout>



	</LinearLayout>
</ScrollView>  