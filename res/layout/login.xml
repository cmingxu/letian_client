<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="@drawable/bg"
              android:gravity="center_horizontal">
    <FrameLayout android:layout_height="fill_parent" android:layout_width="fill_parent"
                 android:background="@drawable/logo">
        <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="right">

            <LinearLayout android:layout_height="wrap_content"
                          android:layout_width="fill_parent" android:orientation="vertical"
                          android:background="@drawable/small_bg" android:layout_marginLeft="10dip"
                          android:layout_marginRight="10dip" android:paddingTop="10dip"
                          android:paddingLeft="10dip" android:paddingRight="10dip">
                <LinearLayout android:layout_height="wrap_content"
                              android:layout_width="fill_parent" android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:text="@string/login"
                              android:layout_marginRight="20dip" android:textStyle="bold"
                              android:textSize="25dip"></TextView>
                    <EditText android:layout_width="fill_parent" android:id="@+id/login"
                              android:layout_height="wrap_content" android:paddingLeft="10dip"></EditText>
                </LinearLayout>


                <LinearLayout android:layout_height="wrap_content"
                              android:layout_width="fill_parent" android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:text="@string/password"
                              android:layout_marginRight="20dip" android:textStyle="bold"
                              android:textSize="25dip"></TextView>
                    <EditText android:layout_width="fill_parent" android:id="@+id/password"
                              android:layout_height="wrap_content" android:inputType="textPassword"
                              android:paddingLeft="10dip"></EditText>
                </LinearLayout>

                <LinearLayout android:layout_height="wrap_content"
                              android:layout_width="fill_parent" android:gravity="center_horizontal">
                    <CheckBox android:layout_width="wrap_content" android:id="@+id/remeber_me"
                              android:layout_height="wrap_content" android:text="@string/remeber_me"
                              layout_alignParentRight="true" android:textStyle="bold"></CheckBox>

                </LinearLayout>

                <LinearLayout android:layout_height="wrap_content"
                              android:layout_width="fill_parent" android:orientation="vertical">
                    <Button android:text="@string/login_button"
                            android:layout_width="fill_parent" android:id="@+id/login_button"
                            android:layout_height="wrap_content" layout_alignParentRight="true"
                            android:textStyle="bold" android:textSize="25dip"></Button>

                    <Button android:text="退出"
                            android:layout_width="fill_parent" android:id="@+id/back_button"
                            android:layout_height="wrap_content" layout_alignParentRight="true"
                            android:textStyle="bold" android:textSize="25dip"></Button>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
