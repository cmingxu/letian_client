		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="horizontal"
			android:gravity="center_vertical|center_horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/confirm_accept_button"
				android:layout_height="wrap_content" android:text="确认接单"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/save_button"
				android:layout_height="wrap_content" android:text="保存"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/save_to_server_button"
				android:layout_height="wrap_content" android:text="上传"></Button>
		</LinearLayout>
	</LinearLayout>
</ScrollView>  